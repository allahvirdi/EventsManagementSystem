@* کامپوننت Loading *@
<div class="loading-container">
    <div class="spinner"></div>
    <p>@Message</p>
</div>

@code {
    [Parameter]
    public string Message { get; set; } = "در حال بارگذاری...";
}

<style>
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px;
    }

    .spinner {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #667eea;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .loading-container p {
        margin-top: 15px;
        color: #666;
        font-size: 14px;
    }
</style>
