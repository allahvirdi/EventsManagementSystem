@* کامپوننت Pagination *@
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" @onclick="() => OnPageChanged(1)" href="javascript:void(0)">اول</a>
        </li>
        <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" @onclick="() => OnPageChanged(CurrentPage - 1)" href="javascript:void(0)">قبلی</a>
        </li>

        @for (int i = StartPage; i <= EndPage; i++)
        {
            var pageNum = i;
            <li class="page-item @(CurrentPage == pageNum ? "active" : "")">
                <a class="page-link" @onclick="() => OnPageChanged(pageNum)" href="javascript:void(0)">@pageNum</a>
            </li>
        }

        <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
            <a class="page-link" @onclick="() => OnPageChanged(CurrentPage + 1)" href="javascript:void(0)">بعدی</a>
        </li>
        <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
            <a class="page-link" @onclick="() => OnPageChanged(TotalPages)" href="javascript:void(0)">آخر</a>
        </li>
    </ul>
</nav>

@code {
    [Parameter]
    public int CurrentPage { get; set; } = 1;

    [Parameter]
    public int TotalPages { get; set; } = 1;

    [Parameter]
    public EventCallback<int> OnPageChange { get; set; }

    private int StartPage => Math.Max(1, CurrentPage - 2);
    private int EndPage => Math.Min(TotalPages, CurrentPage + 2);

    private async Task OnPageChanged(int page)
    {
        if (page < 1 || page > TotalPages || page == CurrentPage)
            return;

        await OnPageChange.InvokeAsync(page);
    }
}

<style>
    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 20px 0;
        justify-content: center;
        direction: rtl;
    }

    .page-item {
        margin: 0 3px;
    }

    .page-link {
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 5px;
        cursor: pointer;
        background-color: white;
        color: #667eea;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .page-link:hover {
        background-color: #f8f9fa;
        border-color: #667eea;
    }

    .page-item.active .page-link {
        background-color: #667eea;
        color: white;
        border-color: #667eea;
    }

    .page-item.disabled .page-link {
        color: #999;
        cursor: not-allowed;
        background-color: #f8f9fa;
    }

    .page-item.disabled .page-link:hover {
        background-color: #f8f9fa;
        border-color: #ddd;
    }
</style>
