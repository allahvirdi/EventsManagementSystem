@code {
    [Parameter]
    public string Title { get; set; } = "Ø±ÙˆÛŒØ¯Ø§Ø¯Ù‡Ø§ÛŒ Ù…Ø±ØªØ¨Ø·";

    [Parameter]
    public List<int> SelectedEventIds { get; set; } = new();

    [Parameter]
    public EventCallback<List<int>> SelectedEventIdsChanged { get; set; }

    [Parameter]
    public int? ExcludeEventId { get; set; } // Ø¨Ø±Ø§ÛŒ EditØŒ Ú©Ù‡ Ø®ÙˆØ¯Ø´ Ø±Ùˆ Ù†Ø´ÙˆÙ† Ù†Ø¯Ù‡

    private List<EventItem> allEvents = new();
    private List<EventItem> filteredEvents = new();
    private List<EventItem> selectedEvents = new();
    private string searchTerm = string.Empty;
    private bool isLoading = false;
    private bool showResults = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadEvents();
        UpdateSelectedEvents();
    }

    private async Task LoadEvents()
    {
        try
        {
            isLoading = true;
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token)) return;

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.GetAsync("api/Events?pageSize=1000");
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<PagedResult<EventItem>>();
                if (result != null)
                {
                    allEvents = result.Items
                        .Where(e => !ExcludeEventId.HasValue || e.Id != ExcludeEventId.Value)
                        .ToList();
                }
            }
        }
        catch { }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            showResults = false;
            filteredEvents.Clear();
            return;
        }

        var term = searchTerm.Trim().ToLower();
        filteredEvents = allEvents
            .Where(e => e.Title.ToLower().Contains(term) || 
                       (e.Subject != null && e.Subject.ToLower().Contains(term)))
            .Take(10)
            .ToList();

        showResults = true;
    }

    private async Task ToggleEventSelection(int eventId)
    {
        if (SelectedEventIds.Contains(eventId))
        {
            SelectedEventIds.Remove(eventId);
        }
        else
        {
            SelectedEventIds.Add(eventId);
        }

        UpdateSelectedEvents();
        await SelectedEventIdsChanged.InvokeAsync(SelectedEventIds);
    }

    private async Task RemoveEvent(int eventId)
    {
        SelectedEventIds.Remove(eventId);
        UpdateSelectedEvents();
        await SelectedEventIdsChanged.InvokeAsync(SelectedEventIds);
    }

    private void UpdateSelectedEvents()
    {
        selectedEvents = allEvents
            .Where(e => SelectedEventIds.Contains(e.Id))
            .ToList();
    }

    private class EventItem
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string? Subject { get; set; }
        public DateTime StartDate { get; set; }
    }

    private class PagedResult<T>
    {
        public List<T> Items { get; set; } = new();
        public int TotalCount { get; set; }
    }
}

