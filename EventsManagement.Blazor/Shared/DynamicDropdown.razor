@using System.Linq.Expressions
@inject HttpClient Http
@inject IAuthService AuthService

<div class="dynamic-dropdown-wrapper">
    <div class="input-group">
        <select class="form-control" @bind="SelectedValue" @bind:after="OnValueChanged">
            <option value="">-- @Placeholder --</option>
            @foreach (var item in items)
            {
                <option value="@item.Id">@item.Value</option>
            }
        </select>
        @if (AllowAdd)
        {
            <button type="button" class="btn btn-success btn-add" @onclick="OpenAddModal">
                <span>➕</span>
            </button>
        }
    </div>
    @if (ValidationFor != null)
    {
        <ValidationMessage For="@ValidationFor" />
    }
</div>

@if (showAddModal)
{
    <div class="modal-backdrop show"></div>
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">افزودن @Title جدید</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <Alert Type="danger" Message="@errorMessage" OnClose="() => errorMessage = string.Empty" />
                    }
                    
                    <div class="form-group">
                        <label>کد</label>
                        <input type="text" class="form-control" @bind="newItemCode" placeholder="کد" />
                    </div>
                    
                    <div class="form-group">
                        <label>عنوان</label>
                        <input type="text" class="form-control" @bind="newItemValue" placeholder="عنوان" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAddModal">انصراف</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveNewItem" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span>در حال ذخیره...</span>
                        }
                        else
                        {
                            <span>ذخیره</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string TableName { get; set; } = string.Empty;

    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Placeholder { get; set; } = "انتخاب کنید";

    [Parameter]
    public int? Value { get; set; }

    [Parameter]
    public EventCallback<int?> ValueChanged { get; set; }

    [Parameter]
    public bool AllowAdd { get; set; } = true;

    [Parameter]
    public Expression<Func<int?>>? ValidationFor { get; set; }

    private List<DynamicItemDto> items = new();
    private int? SelectedValue
    {
        get => Value;
        set => Value = value;
    }

    private bool showAddModal = false;
    private bool isSaving = false;
    private string errorMessage = string.Empty;
    private string newItemCode = string.Empty;
    private string newItemValue = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadItems();
    }

    private async Task LoadItems()
    {
        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token)) return;

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.GetFromJsonAsync<List<DynamicItemDto>>($"api/DynamicTables/ByTable/{TableName}");
            if (response != null)
            {
                items = response;
            }
        }
        catch { }
    }

    private async Task OnValueChanged()
    {
        await ValueChanged.InvokeAsync(Value);
    }

    private void OpenAddModal()
    {
        newItemCode = string.Empty;
        newItemValue = string.Empty;
        errorMessage = string.Empty;
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
    }

    private async Task SaveNewItem()
    {
        if (string.IsNullOrWhiteSpace(newItemValue))
        {
            errorMessage = "عنوان الزامی است";
            return;
        }

        isSaving = true;
        errorMessage = string.Empty;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token)) return;

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var newItem = new
            {
                tableName = TableName,
                code = newItemCode,
                value = newItemValue,
                isActive = true
            };

            var response = await Http.PostAsJsonAsync("api/DynamicTables", newItem);
            if (response.IsSuccessStatusCode)
            {
                await LoadItems();
                CloseAddModal();
                
                // انتخاب خودکار آیتم جدید
                var lastItem = items.LastOrDefault();
                if (lastItem != null)
                {
                    Value = lastItem.Id;
                    await ValueChanged.InvokeAsync(Value);
                }
            }
            else
            {
                errorMessage = "خطا در ذخیره‌سازی";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private class DynamicItemDto
    {
        public int Id { get; set; }
        public string Value { get; set; } = string.Empty;
        public string Code { get; set; } = string.Empty;
    }
}

