@page "/organization-units/create"
@inject HttpClient Http
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>ثبت واحد سازمانی</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h2>ثبت واحد سازمانی جدید</h2>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <Alert Type="danger" Message="@errorMessage" OnClose="() => errorMessage = string.Empty" />
    }

    @if (isLoading)
    {
        <Loading />
    }
    else
    {
        <div class="form-card">
            <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label>نام واحد سازمانی</label>
                    <InputText @bind-Value="model.Name" class="form-control" placeholder="نام واحد سازمانی" />
                    <ValidationMessage For="@(() => model.Name)" />
                </div>

                <div class="form-group">
                    <label>کد</label>
                    <InputNumber @bind-Value="model.Code" class="form-control" />
                    <ValidationMessage For="@(() => model.Code)" />
                </div>

                <div class="form-group">
                    <label>واحد والد (اختیاری)</label>
                    <InputNumber @bind-Value="model.ParentOrganizationUnitId" class="form-control" />
                    <small class="form-text">برای واحد سطح اول خالی بگذارید</small>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">ثبت واحد</button>
                    <button type="button" class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/organization-units")'>انصراف</button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    private CreateOrganizationUnitModel model = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    private async Task HandleSubmit()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.PostAsJsonAsync("api/OrganizationUnits", model);

            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/organization-units");
            }
            else
            {
                errorMessage = "خطا در ثبت واحد سازمانی";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class CreateOrganizationUnitModel
    {
        [Required(ErrorMessage = "نام واحد الزامی است")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "کد الزامی است")]
        public int Code { get; set; }

        public int? ParentOrganizationUnitId { get; set; }
    }
}

