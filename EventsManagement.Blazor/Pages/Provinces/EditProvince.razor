@page "/provinces/edit/{Id:int}"
@inject HttpClient Http
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>ویرایش استان</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h2>ویرایش استان</h2>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <Alert Type="danger" Message="@errorMessage" OnClose="() => errorMessage = string.Empty" />
    }

    @if (isLoading)
    {
        <Loading />
    }
    else if (model != null)
    {
        <div class="form-card">
            <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label>نام استان</label>
                    <InputText @bind-Value="model.Name" class="form-control" placeholder="مثال: تهران" />
                    <ValidationMessage For="@(() => model.Name)" />
                </div>

                <div class="form-group">
                    <label>کد استان</label>
                    <InputNumber @bind-Value="model.Code" class="form-control" />
                    <ValidationMessage For="@(() => model.Code)" />
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
                    <button type="button" class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/provinces")'>انصراف</button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private UpdateProvinceModel? model;
    private bool isLoading = true;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadProvince();
    }

    private async Task LoadProvince()
    {
        isLoading = true;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.GetFromJsonAsync<ApiResponse<ProvinceDto>>($"api/Provinces/{Id}");

            if (response?.IsSuccess == true && response.Data != null)
            {
                var province = response.Data;
                model = new UpdateProvinceModel
                {
                    Name = province.Name,
                    Code = province.Code
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا در بارگذاری: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        if (model == null) return;

        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var token = await AuthService.GetTokenAsync();
            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.PutAsJsonAsync($"api/Provinces/{Id}", model);

            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/provinces");
            }
            else
            {
                errorMessage = "خطا در بروزرسانی استان";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class ApiResponse<T>
    {
        public bool IsSuccess { get; set; }
        public T? Data { get; set; }
    }

    private class ProvinceDto
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public int Code { get; set; }
    }

    private class UpdateProvinceModel
    {
        [Required(ErrorMessage = "نام استان الزامی است")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "کد استان الزامی است")]
        public int Code { get; set; }
    }
}

