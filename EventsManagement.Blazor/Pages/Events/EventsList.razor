@page "/events"
@inject HttpClient Http
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>لیست رویدادها</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h2>لیست رویدادها</h2>
        <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/events/create")'>
            ثبت رویداد جدید
        </button>
    </div>

    <div class="filters">
        <input type="text" @bind="searchTerm" @bind:event="oninput" placeholder="جستجو..." class="search-input" />
        <button class="btn btn-secondary" @onclick="LoadEvents">جستجو</button>
    </div>

    @if (isLoading)
    {
        <Loading />
    }
    else if (events.Any())
    {
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>عنوان</th>
                        <th>توضیحات</th>
                        <th>تاریخ</th>
                        <th>وضعیت</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evt in events)
                    {
                        <tr>
                            <td>@evt.Title</td>
                            <td>@(evt.Description.Length > 50 ? evt.Description.Substring(0, 50) + "..." : evt.Description)</td>
                            <td>@evt.CreatedAt.ToString("yyyy/MM/dd")</td>
                            <td><span class="badge">@evt.StatusId</span></td>
                            <td>
                                <button class="btn btn-sm btn-info" @onclick='() => Navigation.NavigateTo($"/events/{evt.Id}")'>جزئیات</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <Pagination CurrentPage="currentPage" TotalPages="totalPages" OnPageChange="OnPageChanged" />
    }
    else
    {
        <div class="no-data">
            <p>هیچ رویدادی یافت نشد</p>
        </div>
    }
</div>

@code {
    private List<EventDto> events = new();
    private bool isLoading = true;
    private string searchTerm = string.Empty;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadEvents();
    }

    private async Task LoadEvents()
    {
        isLoading = true;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.GetFromJsonAsync<ApiResponse<PagedResult<EventDto>>>
                ($"api/Events?pageNumber={currentPage}&pageSize={pageSize}&searchTerm={searchTerm}");

            if (response?.IsSuccess == true && response.Data != null)
            {
                events = response.Data.Items;
                totalPages = (int)Math.Ceiling((double)response.Data.TotalCount / pageSize);
            }
        }
        catch (Exception ex)
        {
            // Handle error
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnPageChanged(int page)
    {
        currentPage = page;
        await LoadEvents();
    }

    private class ApiResponse<T>
    {
        public bool IsSuccess { get; set; }
        public T? Data { get; set; }
    }

    private class PagedResult<T>
    {
        public List<T> Items { get; set; } = new();
        public int TotalCount { get; set; }
    }

    private class EventDto
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public int StatusId { get; set; }
        public DateTime CreatedAt { get; set; }
    }
}

