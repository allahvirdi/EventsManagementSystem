@page "/users"
@inject HttpClient Http
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>لیست کاربران</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h2>مدیریت کاربران</h2>
        <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/users/create")'>
            افزودن کاربر جدید
        </button>
    </div>

    <div class="filters">
        <input type="text" @bind="searchTerm" @bind:event="oninput" placeholder="جستجو بر اساس نام..." class="search-input" />
        <button class="btn btn-secondary" @onclick="LoadUsers">جستجو</button>
    </div>

    @if (isLoading)
    {
        <Loading />
    }
    else if (users.Any())
    {
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>نام کامل</th>
                        <th>ایمیل</th>
                        <th>شماره تماس</th>
                        <th>نقش‌ها</th>
                        <th>وضعیت</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                @if (user.Roles != null && user.Roles.Any())
                                {
                                    @string.Join(", ", user.Roles)
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge badge-success">فعال</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">غیرفعال</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn btn-sm btn-info" @onclick='() => Navigation.NavigateTo($"/users/edit/{user.Id}")'>
                                        ویرایش
                                    </button>
                                    <button class="btn btn-sm btn-warning" @onclick="() => ShowResetPasswordModal(user.Id)">
                                        ریست رمز
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <Pagination CurrentPage="currentPage" TotalPages="totalPages" OnPageChange="OnPageChanged" />
    }
    else
    {
        <div class="no-data">
            <p>هیچ کاربری یافت نشد</p>
        </div>
    }

    @if (showResetModal)
    {
        <Modal Title="ریست رمز عبور" OnClose="CloseResetModal">
            <ChildContent>
                <div class="modal-form">
                    <div class="form-group">
                        <label>رمز عبور جدید</label>
                        <input type="password" @bind="newPassword" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>تکرار رمز عبور</label>
                        <input type="password" @bind="confirmPassword" class="form-control" />
                    </div>
                    @if (!string.IsNullOrEmpty(resetError))
                    {
                        <Alert Type="danger" Message="@resetError" />
                    }
                </div>
            </ChildContent>
            <FooterContent>
                <button class="btn btn-primary" @onclick="HandleResetPassword">ریست رمز</button>
                <button class="btn btn-secondary" @onclick="CloseResetModal">انصراف</button>
            </FooterContent>
        </Modal>
    }
</div>

@code {
    private List<UserDto> users = new();
    private bool isLoading = true;
    private string searchTerm = string.Empty;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;

    private bool showResetModal = false;
    private string? selectedUserId;
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;
    private string resetError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        isLoading = true;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.GetFromJsonAsync<ApiResponse<PagedResult<UserDto>>>
                ($"api/Users?pageNumber={currentPage}&pageSize={pageSize}");

            if (response?.IsSuccess == true && response.Data != null)
            {
                users = response.Data.Items;
                totalPages = (int)Math.Ceiling((double)response.Data.TotalCount / pageSize);
            }
        }
        catch (Exception ex)
        {
            // Handle error
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnPageChanged(int page)
    {
        currentPage = page;
        await LoadUsers();
    }

    private void ShowResetPasswordModal(string userId)
    {
        selectedUserId = userId;
        newPassword = string.Empty;
        confirmPassword = string.Empty;
        resetError = string.Empty;
        showResetModal = true;
    }

    private void CloseResetModal()
    {
        showResetModal = false;
        selectedUserId = null;
    }

    private async Task HandleResetPassword()
    {
        resetError = string.Empty;

        if (string.IsNullOrEmpty(newPassword) || newPassword.Length < 6)
        {
            resetError = "رمز عبور باید حداقل 6 کاراکتر باشد";
            return;
        }

        if (newPassword != confirmPassword)
        {
            resetError = "رمز عبور و تکرار آن یکسان نیستند";
            return;
        }

        try
        {
            var token = await AuthService.GetTokenAsync();
            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.PostAsJsonAsync($"api/Users/{selectedUserId}/reset-password", 
                new { NewPassword = newPassword });

            if (response.IsSuccessStatusCode)
            {
                CloseResetModal();
            }
            else
            {
                resetError = "خطا در ریست رمز عبور";
            }
        }
        catch (Exception ex)
        {
            resetError = $"خطا: {ex.Message}";
        }
    }

    private class ApiResponse<T>
    {
        public bool IsSuccess { get; set; }
        public T? Data { get; set; }
    }

    private class PagedResult<T>
    {
        public List<T> Items { get; set; } = new();
        public int TotalCount { get; set; }
    }

    private class UserDto
    {
        public string Id { get; set; } = string.Empty;
        public string FullName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string? PhoneNumber { get; set; }
        public bool IsActive { get; set; }
        public List<string>? Roles { get; set; }
    }
}

