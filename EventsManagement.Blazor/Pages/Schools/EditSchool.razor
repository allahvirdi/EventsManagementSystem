@page "/schools/edit/{Id:int}"
@inject HttpClient Http
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>ویرایش مدرسه</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h2>ویرایش مدرسه</h2>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <Alert Type="danger" Message="@errorMessage" OnClose="() => errorMessage = string.Empty" />
    }

    @if (isLoading)
    {
        <Loading />
    }
    else if (model != null)
    {
        <div class="form-card">
            <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label>نام مدرسه</label>
                    <InputText @bind-Value="model.Name" class="form-control" />
                    <ValidationMessage For="@(() => model.Name)" />
                </div>

                <div class="form-group">
                    <label>کد</label>
                    <InputNumber @bind-Value="model.Code" class="form-control" />
                    <ValidationMessage For="@(() => model.Code)" />
                </div>

                <div class="form-group">
                    <label>منطقه</label>
                    <InputNumber @bind-Value="model.RegionId" class="form-control" />
                    <ValidationMessage For="@(() => model.RegionId)" />
                </div>

                <div class="form-group">
                    <label>آدرس</label>
                    <InputTextArea @bind-Value="model.Address" class="form-control" rows="3" />
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
                    <button type="button" class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/schools")'>انصراف</button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private UpdateSchoolModel? model;
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadSchool();
    }

    private async Task LoadSchool()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.GetFromJsonAsync<SchoolDto>($"api/Schools/{Id}");

            if (response != null)
            {
                model = new UpdateSchoolModel
                {
                    Name = response.Name,
                    Code = response.Code,
                    RegionId = response.RegionId,
                    Address = response.Address
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا در بارگذاری مدرسه: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.PutAsJsonAsync($"api/Schools/{Id}", model);

            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/schools");
            }
            else
            {
                errorMessage = "خطا در ویرایش مدرسه";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class UpdateSchoolModel
    {
        [Required(ErrorMessage = "نام مدرسه الزامی است")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "کد الزامی است")]
        public int Code { get; set; }

        [Required(ErrorMessage = "منطقه الزامی است")]
        public int RegionId { get; set; }

        public string? Address { get; set; }
    }

    private class SchoolDto
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public int Code { get; set; }
        public int RegionId { get; set; }
        public string? Address { get; set; }
    }
}

