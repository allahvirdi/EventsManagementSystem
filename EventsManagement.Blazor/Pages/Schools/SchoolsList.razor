@page "/schools"
@inject HttpClient Http
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>لیست مدارس</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h2>مدیریت مدارس</h2>
        <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/schools/create")'>
            <span>➕</span> افزودن مدرسه
        </button>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <Alert Type="danger" Message="@errorMessage" OnClose="() => errorMessage = string.Empty" />
    }

    <div class="search-bar">
        <input type="text" placeholder="جستجو بر اساس نام..." @bind="searchTerm" @bind:event="oninput" class="search-input" />
        <button class="btn btn-secondary" @onclick="LoadSchools">جستجو</button>
    </div>

    @if (isLoading)
    {
        <Loading />
    }
    else if (schools.Any())
    {
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>نام مدرسه</th>
                        <th>کد</th>
                        <th>منطقه</th>
                        <th>استان</th>
                        <th>آدرس</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var school in schools)
                    {
                        <tr>
                            <td>@school.Name</td>
                            <td>@school.Code</td>
                            <td>@school.RegionName</td>
                            <td>@school.ProvinceName</td>
                            <td>@(school.Address?.Length > 40 ? school.Address.Substring(0, 40) + "..." : school.Address)</td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick='() => Navigation.NavigateTo($"/schools/edit/{school.Id}")'>ویرایش</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <Pagination CurrentPage="currentPage" TotalPages="totalPages" OnPageChange="OnPageChanged" />
    }
    else
    {
        <div class="no-data">
            <p>هیچ مدرسه‌ای یافت نشد</p>
        </div>
    }
</div>

@code {
    private List<SchoolDto> schools = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string searchTerm = string.Empty;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadSchools();
    }

    private async Task LoadSchools()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var url = $"api/Schools?page={currentPage}&pageSize={pageSize}";
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                url += $"&search={Uri.EscapeDataString(searchTerm)}";
            }

            var response = await Http.GetFromJsonAsync<PagedResult<SchoolDto>>(url);

            if (response != null)
            {
                schools = response.Items;
                totalPages = (int)Math.Ceiling((double)response.TotalCount / pageSize);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا در بارگذاری مدارس: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnPageChanged(int newPage)
    {
        currentPage = newPage;
        await LoadSchools();
    }

    private class SchoolDto
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public int Code { get; set; }
        public int RegionId { get; set; }
        public string RegionName { get; set; } = string.Empty;
        public string ProvinceName { get; set; } = string.Empty;
        public string? Address { get; set; }
    }

    private class PagedResult<T>
    {
        public List<T> Items { get; set; } = new();
        public int TotalCount { get; set; }
        public int PageNumber { get; set; }
        public int PageSize { get; set; }
    }
}

