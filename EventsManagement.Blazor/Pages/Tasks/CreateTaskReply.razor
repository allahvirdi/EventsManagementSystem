@page "/tasks/{TaskId:int}/replies/create"
@inject HttpClient Http
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>ثبت شرح اقدام</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h2>ثبت شرح اقدام</h2>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <Alert Type="AlertType.Danger" Message="@errorMessage" OnClose="() => errorMessage = string.Empty" />
    }

    @if (isLoading)
    {
        <Loading />
    }
    else
    {
        <div class="form-card">
            <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label>شرح اقدام</label>
                    <InputTextArea @bind-Value="model.ReplyText" class="form-control" rows="6" 
                        placeholder="شرح کامل اقدامات انجام شده را وارد کنید..." />
                    <ValidationMessage For="@(() => model.ReplyText)" />
                </div>

                <div class="form-group">
                    <label>وضعیت جدید</label>
                    <InputNumber @bind-Value="model.NewStatusId" class="form-control" />
                    <ValidationMessage For="@(() => model.NewStatusId)" />
                </div>

                <div class="form-group">
                    <label>درصد پیشرفت جدید</label>
                    <div class="progress-input">
                        <InputNumber @bind-Value="model.NewProgressPercentage" class="form-control" min="0" max="100" />
                        <span class="percentage-label">%</span>
                    </div>
                    <ValidationMessage For="@(() => model.NewProgressPercentage)" />
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">ثبت شرح اقدام</button>
                    <button type="button" class="btn btn-secondary" @onclick="GoBack">انصراف</button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter]
    public int TaskId { get; set; }

    private CreateTaskReplyModel model = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    protected override void OnInitialized()
    {
        model.TaskId = TaskId;
    }

    private async Task HandleSubmit()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.PostAsJsonAsync("api/TaskReplies", model);

            if (response.IsSuccessStatusCode)
            {
                // Navigate back - you can customize this based on your navigation structure
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = "خطا در ثبت شرح اقدام";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    private class CreateTaskReplyModel
    {
        public int TaskId { get; set; }

        [Required(ErrorMessage = "شرح اقدام الزامی است")]
        [MinLength(10, ErrorMessage = "شرح اقدام باید حداقل 10 کاراکتر باشد")]
        public string ReplyText { get; set; } = string.Empty;

        [Required(ErrorMessage = "وضعیت جدید الزامی است")]
        public int NewStatusId { get; set; } = 1;

        [Range(0, 100, ErrorMessage = "درصد پیشرفت باید بین 0 تا 100 باشد")]
        public int NewProgressPercentage { get; set; } = 0;
    }
}

