@page "/events/{EventId:int}/tasks"
@inject HttpClient Http
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>لیست اقدامات</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h2>لیست اقدامات رویداد</h2>
        <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo($"/events/{EventId}/tasks/create")'>
            <span>➕</span> افزودن اقدام
        </button>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <Alert Type="danger" Message="@errorMessage" OnClose="() => errorMessage = string.Empty" />
    }

    @if (isLoading)
    {
        <Loading />
    }
    else if (tasks.Any())
    {
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>عنوان</th>
                        <th>شرح</th>
                        <th>پیشرفت</th>
                        <th>وضعیت</th>
                        <th>مهلت</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in tasks)
                    {
                        <tr>
                            <td>@task.Title</td>
                            <td>@(task.Description.Length > 40 ? task.Description.Substring(0, 40) + "..." : task.Description)</td>
                            <td>
                                <div class="progress-bar-container">
                                    <div class="progress-bar" style="width: @(task.ProgressPercentage)%"></div>
                                    <span class="progress-text">@(task.ProgressPercentage)%</span>
                                </div>
                            </td>
                            <td><span class="badge status-@task.StatusId">@GetStatusText(task.StatusId)</span></td>
                            <td>@task.DueDate.ToPersianDate()</td>
                            <td>
                                <button class="btn btn-sm btn-info" @onclick='() => Navigation.NavigateTo($"/tasks/{task.Id}/replies")'>شرح اقدامات</button>
                                <button class="btn btn-sm btn-warning" @onclick='() => Navigation.NavigateTo($"/tasks/edit/{task.Id}")'>ویرایش</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <Pagination CurrentPage="currentPage" TotalPages="totalPages" OnPageChange="OnPageChanged" />
    }
    else
    {
        <div class="no-data">
            <p>هیچ اقدامی برای این رویداد ثبت نشده است</p>
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo($"/events/{EventId}/tasks/create")'>
                افزودن اولین اقدام
            </button>
        </div>
    }
</div>

@code {
    [Parameter]
    public int EventId { get; set; }

    private List<TaskDto> tasks = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadTasks();
    }

    private async Task LoadTasks()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var url = $"api/Tasks?eventId={EventId}&page={currentPage}&pageSize={pageSize}";
            var response = await Http.GetFromJsonAsync<PagedResult<TaskDto>>(url);

            if (response != null)
            {
                tasks = response.Items;
                totalPages = (int)Math.Ceiling((double)response.TotalCount / pageSize);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا در بارگذاری اقدامات: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnPageChanged(int newPage)
    {
        currentPage = newPage;
        await LoadTasks();
    }

    private string GetStatusText(int statusId)
    {
        return statusId switch
        {
            1 => "در انتظار",
            2 => "در حال انجام",
            3 => "تکمیل شده",
            4 => "متوقف شده",
            _ => "نامشخص"
        };
    }

    private class TaskDto
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public int ProgressPercentage { get; set; }
        public int StatusId { get; set; }
        public DateTime DueDate { get; set; }
    }

    private class PagedResult<T>
    {
        public List<T> Items { get; set; } = new();
        public int TotalCount { get; set; }
        public int PageNumber { get; set; }
        public int PageSize { get; set; }
    }
}

