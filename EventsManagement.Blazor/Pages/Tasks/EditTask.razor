@page "/tasks/edit/{Id:int}"
@inject HttpClient Http
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>ویرایش وظیفه</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h2>ویرایش وظیفه</h2>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <Alert Type="danger" Message="@errorMessage" OnClose="() => errorMessage = string.Empty" />
    }

    @if (isLoading)
    {
        <Loading />
    }
    else if (model != null)
    {
        <div class="form-card">
            <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label>عنوان وظیفه</label>
                    <InputText @bind-Value="model.Title" class="form-control" />
                    <ValidationMessage For="@(() => model.Title)" />
                </div>

                <div class="form-group">
                    <label>شرح وظیفه</label>
                    <InputTextArea @bind-Value="model.Description" class="form-control" rows="4" />
                    <ValidationMessage For="@(() => model.Description)" />
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>تاریخ شروع</label>
                        <InputDate @bind-Value="model.StartDate" class="form-control" />
                        <ValidationMessage For="@(() => model.StartDate)" />
                    </div>

                    <div class="form-group">
                        <label>مهلت انجام</label>
                        <InputDate @bind-Value="model.DueDate" class="form-control" />
                        <ValidationMessage For="@(() => model.DueDate)" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>درصد پیشرفت</label>
                        <InputNumber @bind-Value="model.ProgressPercentage" class="form-control" min="0" max="100" />
                        <ValidationMessage For="@(() => model.ProgressPercentage)" />
                    </div>

                    <div class="form-group">
                        <label>وضعیت</label>
                        <InputNumber @bind-Value="model.StatusId" class="form-control" />
                        <ValidationMessage For="@(() => model.StatusId)" />
                    </div>
                </div>

                <div class="form-group">
                    <label>واحد سازمانی مسئول</label>
                    <InputNumber @bind-Value="model.AssignedToOrganizationUnitId" class="form-control" />
                    <ValidationMessage For="@(() => model.AssignedToOrganizationUnitId)" />
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
                    <button type="button" class="btn btn-secondary" @onclick="GoBack">انصراف</button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private UpdateTaskModel? model;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private int? eventId;

    protected override async Task OnInitializedAsync()
    {
        await LoadTask();
    }

    private async Task LoadTask()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.GetFromJsonAsync<TaskDto>($"api/Tasks/{Id}");

            if (response != null)
            {
                eventId = response.EventId;
                model = new UpdateTaskModel
                {
                    Title = response.Title,
                    Description = response.Description,
                    StartDate = response.StartDate,
                    DueDate = response.DueDate,
                    ProgressPercentage = response.ProgressPercentage,
                    StatusId = response.StatusId,
                    AssignedToOrganizationUnitId = response.AssignedToOrganizationUnitId
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا در بارگذاری وظیفه: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var token = await AuthService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            Http.DefaultRequestHeaders.Authorization = 
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.PutAsJsonAsync($"api/Tasks/{Id}", model);

            if (response.IsSuccessStatusCode)
            {
                if (eventId.HasValue)
                {
                    Navigation.NavigateTo($"/events/{eventId.Value}");
                }
                else
                {
                    Navigation.NavigateTo("/events");
                }
            }
            else
            {
                errorMessage = "خطا در ویرایش وظیفه";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        if (eventId.HasValue)
        {
            Navigation.NavigateTo($"/events/{eventId.Value}");
        }
        else
        {
            Navigation.NavigateTo("/events");
        }
    }

    private class UpdateTaskModel
    {
        [Required(ErrorMessage = "عنوان الزامی است")]
        public string Title { get; set; } = string.Empty;

        [Required(ErrorMessage = "شرح وظیفه الزامی است")]
        public string Description { get; set; } = string.Empty;

        [Required(ErrorMessage = "تاریخ شروع الزامی است")]
        public DateTime StartDate { get; set; }

        [Required(ErrorMessage = "مهلت انجام الزامی است")]
        public DateTime DueDate { get; set; }

        [Range(0, 100, ErrorMessage = "درصد پیشرفت باید بین 0 تا 100 باشد")]
        public int ProgressPercentage { get; set; }

        [Required(ErrorMessage = "وضعیت الزامی است")]
        public int StatusId { get; set; }

        public int? AssignedToOrganizationUnitId { get; set; }
    }

    private class TaskDto
    {
        public int Id { get; set; }
        public int EventId { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public DateTime StartDate { get; set; }
        public DateTime DueDate { get; set; }
        public int ProgressPercentage { get; set; }
        public int StatusId { get; set; }
        public int? AssignedToOrganizationUnitId { get; set; }
    }
}

