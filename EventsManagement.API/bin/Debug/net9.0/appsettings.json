{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(local);Database=EventsManagementDB;Integrated Security=true;Encrypt=false"
  },
  "JwtSettings": {
    "SecretKey": "EventsManagementSystemSecretKeyThatIsVeryLongAndSecure2025!@#$%^&*()",
    "Issuer": "EventsManagementAPI",
    "Audience": "EventsManagementApp",
    "AccessTokenExpirationMinutes": 100,
    "RefreshTokenExpirationDays": 7
  },
  "FileUpload": {
    "MaxFileSizeBytes": 104857600,
    "UploadPath": "Uploads",
    "AllowedExtensions": [
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".jpg",
      ".jpeg",
      ".png",
      ".zip",
      ".rar",
      ".txt"
    ]
  },
  "AllowedHosts": "*"
}

